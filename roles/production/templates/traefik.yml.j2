api:
  debug: true # Enable this to debug Traefik
  dashboard: true # Enable the web dashboard

entryPoints:
  http:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: "https"
          scheme: "https"
  https:
    address: ":443"

# Allow reverse-proxy on self-signed web app
serversTransport:
  insecureSkipVerify: true

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    network: "overlay_network" # Docker network
    exposedbydefault: false # Must use traefik.enable to expose service

# HTTPS configuration
certificatesResolvers:
  ovh:
    acme:
      email: "{{ email }}"
      storage: "acme.json"
      dnsChallenge:
        provider: "ovh"

# Reverse-proxy Proxmox
http:
  routers:
    proxmox:
      rule: "Host(`proxmox.{{ private_domain }}`)"
      entryPoints:
        - "https"
      tls:
        certResolver: "ovh"
      service: "proxmox"
  services:
    proxmox:
      loadBalancer:
        servers:
          - url: "https://192.168.1.9:8006"