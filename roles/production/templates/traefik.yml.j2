api:
  debug: false # Enable this to debug Traefik
  dashboard: true # Enable the web dashboard

entryPoints:
  # Redirect HTTP resquest to HTTPS
  http:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: "https"
          scheme: "https"
  # HTTPS port
  https:
    address: ":443"
  # Reverse-proxy Proxmox
  routers:
    proxmox:
      rule: Host(`proxmox.{{ private_domain }}`)
      entryPoints: "https"
      tls:
        certresolver: "ovh"
      service: "proxmox"
      loadbalancer:
        server:
          port: "8006"

# Allow reverse-proxy on self-signed web app
serversTransport:
  insecureSkipVerify: true

providers:
  docker:
    network: overlay_network # Docker network
    exposedbydefault: false # Must use traefik.enable to expose service

# HTTPS configuration
certificatesResolvers:
  ovh:
    acme:
      email: "{{ email }}"
      storage: "acme.json"
      dnsChallenge:
        provider: "ovh"