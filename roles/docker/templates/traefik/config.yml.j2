---
http:
  routers:
    pve:
      rule: "Host(`pve.{{ private_domain }}`)"
      entryPoints: 
        - "https"
      tls: {}
      service: "pve"
    pbe:
      rule: "Host(`pbe.{{ private_domain }}`)"
      entryPoints: 
        - "https"
      tls: {}
      service: "pbe"
    wireguard:
      rule: "Host(`wg.{{ private_domain }}`)"
      entryPoints: 
        - "https"
      tls: {}
      service: "wireguard"
    openmediavault:
      rule: "Host(`nas.{{ private_domain }}`)"
      entryPoints: 
        - "https"
      tls: {}
      service: "openmediavault"

  services:
    pve:
      loadBalancer:
        servers:
          - url: "https://{{ hostvars['pve']['ansible_host'] }}:8006"
    pbe:
      loadBalancer:
        servers:
          - url: "https://{{ hostvars['pbe']['ansible_host'] }}:8007"
    wireguard:
      loadBalancer:
        servers:
          - url: "http://{{ hostvars['vpn']['ansible_host'] }}:51821"
    openmediavault:
      loadBalancer:
        servers:
          - url: "http://{{ hostvars['nas']['ansible_host'] }}:80"